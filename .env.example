# Local AI CySec Workstation - Environment Configuration
# Copy this file to .env and customize with your values
# DO NOT commit .env to version control (it's in .gitignore)

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================

# LiteLLM API Keys (generate secure random keys)
LITELLM_MASTER_KEY=sk-1234567890abcdef
LITELLM_SALT_KEY=sk-salt-abcdef1234567890

# Database Configuration
POSTGRES_DB=litellm
POSTGRES_USER=llmproxy
POSTGRES_PASSWORD=changeme_secure_password

# Service Ports (change if conflicts exist)
LITELLM_PORT=4000
BIG_AGI_PORT=3000
OPEN_WEBUI_PORT=3001
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
PROMTAIL_PORT=9080

# LocalAI Configuration
DEBUG=false
REBUILD=false
CONTEXT_SIZE=4096
THREADS=8

# ============================================================================
# SAML LAB CONFIGURATION (Optional)
# ============================================================================

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# SimpleSAMLphp
SIMPLESAMLPHP_ADMIN_PASSWORD=admin123

# NextCloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin123
NEXTCLOUD_DB_PASSWORD=nextcloud123
MYSQL_ROOT_PASSWORD=rootpass123

# SFTP Server
