# Local AI CySec Workstation - Environment Configuration
# Copy this file to .env and customize with your values
# DO NOT commit .env to version control (it's in .gitignore)

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================

# LiteLLM API Keys (generate secure random keys)
LITELLM_MASTER_KEY=sk-1234567890abcdef
LITELLM_SALT_KEY=sk-salt-abcdef1234567890

# Database Configuration
POSTGRES_DB=litellm
POSTGRES_USER=llmproxy
POSTGRES_PASSWORD=changeme_secure_password

# Service Ports (change if conflicts exist)
LITELLM_PORT=4000
BIG_AGI_PORT=3000
OPEN_WEBUI_PORT=3001
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
PROMTAIL_PORT=9080

# LocalAI Configuration
DEBUG=false
REBUILD=false
CONTEXT_SIZE=4096
THREADS=8

# ============================================================================
# SLACK CONFIGURATION (for n8n workflows)
# ============================================================================

# Slack Bot Token for interactive messages (starts with xoxb-)
# Get this from: Slack App > OAuth & Permissions > Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-token-here

# Slack Webhook URLs (for simple notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_DIGEST_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/DIGEST/URL

# Slack Channel ID for notifications
SLACK_CHANNEL_ID=C0XXXXXXX

# ============================================================================
# HOMELAB INTEGRATION SECRETS
# ============================================================================

# Pi-hole
PIHOLE_PASSWORD=your-pihole-password

# Home Assistant
HA_TOKEN=your-long-lived-access-token

# *arr Stack API Keys (from Settings > General in each app)
SONARR_API_KEY=your-sonarr-api-key
RADARR_API_KEY=your-radarr-api-key
PROWLARR_API_KEY=your-prowlarr-api-key
LIDARR_API_KEY=your-lidarr-api-key
READARR_API_KEY=your-readarr-api-key

# ============================================================================
# SAML LAB CONFIGURATION (Optional)
# ============================================================================

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# SimpleSAMLphp
SIMPLESAMLPHP_ADMIN_PASSWORD=admin123

# NextCloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin123
NEXTCLOUD_DB_PASSWORD=nextcloud123
MYSQL_ROOT_PASSWORD=rootpass123

# SFTP Server
SFTP_USER=testuser
SFTP_PASSWORD=testpass

# ============================================================================
# API KEYS FOR EXTERNAL PROVIDERS (Optional)
# ============================================================================

